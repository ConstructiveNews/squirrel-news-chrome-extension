{
  "manifest_version": 3,
  "name": "Squirrel News Extension",
  "version": "1.0.0",
  "description": "Chrome extension for Squirrel News",
  "author": "Korotkaya Irina",
  "icons": {
    "128": "icon.png"
  },
  "action":{
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "search"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
 }
  
}